<div class="rounded-3xl border border-ink-900/10 bg-white/70 p-6">
  <div
    class="flex flex-col items-center gap-3 rounded-3xl border border-ink-900/10 bg-white/90 px-6 py-10 text-center text-sm text-ink-900/70 shadow-sm"
    data-promos-loading
    role="status"
    aria-live="polite"
  >
    <span class="spinner spinner-primary" aria-hidden="true"></span>
    <p class="text-sm font-medium">Cargando promociones...</p>
    <p class="text-xs text-ink-900/50">Buscando destacadas y activas.</p>
  </div>
  <div class="hidden" data-promos-content>
    <section class="hidden" data-promos-featured-section>
      <div class="flex items-center gap-3">
        <h3 class="text-lg font-semibold">Promociones destacadas</h3>
        <p
          class="ml-auto text-right text-sm text-ink-900/60"
          data-promos-counter
        >
        </p>
      </div>
      <div
        class="mt-4 grid gap-3 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6"
        data-promos-featured
      >
      </div>
    </section>
    <section class="mt-8">
      <div class="flex items-center justify-between gap-3">
        <h3 class="text-lg font-semibold">Todas las promociones</h3>
      </div>
      <div class="mt-4 grid gap-4" data-promos-container></div>
    </section>
    <div class="mt-6 text-center text-sm text-ink-900/60" data-promos-load-more>
    </div>
  </div>
</div>

<div
  class="fixed inset-0 z-50 hidden flex items-center justify-center bg-ink-900/40 p-4 backdrop-blur-sm"
  data-promos-modal-overlay
  hidden
>
  <div
    class="max-h-[90vh] w-full max-w-3xl overflow-y-auto rounded-3xl border border-ink-900/10 bg-white/95 p-6 shadow-2xl"
    data-promos-modal
  >
    <div class="flex items-start justify-between gap-4">
      <div>
        <p class="text-xs uppercase tracking-[0.2em] text-ink-900/50">
          Detalle de la promoción
        </p>
        <div class="flex flex-wrap items-center gap-2">
          <h3 class="text-2xl font-semibold" data-promos-modal-title></h3>
          <span
            class="hidden rounded-full bg-sage-500/20 px-2 py-0.5 text-xs font-semibold text-ink-900/70"
            data-promos-modal-featured
          >
            Destacada
          </span>
        </div>
        <p class="mt-1 text-sm text-ink-900/60" data-promos-modal-business></p>
      </div>
      <button
        class="rounded-full border border-ink-900/20 px-3 py-1 text-xs"
        type="button"
        data-promos-modal-close
      >
        Cerrar
      </button>
    </div>
    <div class="mt-6 grid gap-4">
      <div
        class="promo-modal-media h-72 overflow-hidden rounded-3xl border border-ink-900/10 sm:h-80 lg:h-[28rem]"
        data-promos-modal-media
      >
        <img
          class="promo-modal-image h-full w-full object-cover"
          alt="Foto de la promoción"
          data-promos-modal-image
        />
        <div
          class="flex h-full w-full items-center justify-center text-5xl"
          data-promos-modal-emoji
        >
        </div>
      </div>
      <p class="text-sm text-ink-900/70" data-promos-modal-description></p>
      <div class="grid gap-3 text-sm text-ink-900/70">
        <div class="flex flex-wrap gap-2" data-promos-modal-tags></div>
        <div class="grid gap-2 sm:grid-cols-2">
          <div data-promos-modal-field="type">
            <p class="text-xs uppercase tracking-[0.2em] text-ink-900/50">
              Tipo
            </p>
            <p data-promos-modal-type></p>
          </div>
          <div data-promos-modal-field="value">
            <p class="text-xs uppercase tracking-[0.2em] text-ink-900/50">
              Valor
            </p>
            <p data-promos-modal-value></p>
          </div>
          <div>
            <p class="text-xs uppercase tracking-[0.2em] text-ink-900/50">
              Días
            </p>
            <p data-promos-modal-days></p>
          </div>
          <div data-promos-modal-field="instagram">
            <p class="text-xs uppercase tracking-[0.2em] text-ink-900/50">
              Instagram
            </p>
            <a
              class="underline"
              target="_blank"
              rel="noreferrer"
              data-promos-modal-instagram></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
