---
const { city = "", at = "" } = Astro.props;
---

<div class="glass-panel rounded-3xl p-4 sm:p-5" data-promos-filters>
  <div class="flex items-start justify-between gap-3">
    <div class="grid gap-1">
      <h1 class="text-lg font-semibold sm:text-xl">Filtros</h1>
    </div>
    <button
      class="mt-1 rounded-full border border-ink-900/20 px-3 py-1 text-xs sm:hidden"
      type="button"
      data-promos-filters-toggle
      aria-expanded="true"
    >
      Ocultar
    </button>
  </div>
  <form class="mt-4 grid gap-4 sm:mt-6" data-promos-form data-promos-filters-body>
    <div class="flex flex-wrap items-end gap-2 sm:gap-3">
      <label
        class="flex min-w-[140px] flex-1 flex-col gap-1 text-xs font-semibold sm:min-w-[160px] sm:text-sm"
      >
        Ciudad
        <select
          class="input-field"
          name="city"
          data-city-select
          data-initial-city={city}
        >
          <option value="">Todas</option>
        </select>
      </label>
      <label
        class="flex min-w-[140px] flex-1 flex-col gap-1 text-xs font-semibold sm:min-w-[160px] sm:text-sm"
      >
        Categor√≠a
        <select class="input-field" name="category" data-category-select>
          <option value="">Todas</option>
        </select>
      </label>
      <label
        class="flex min-w-[140px] flex-1 flex-col gap-1 text-xs font-semibold sm:min-w-[160px] sm:text-sm"
      >
        Tipo de promo
        <select class="input-field" name="promoType">
          <option value="">Todas</option>
          <option value="discount">Descuento</option>
          <option value="2x1">2x1</option>
          <option value="combo">Combo</option>
          <option value="other">Otra</option>
        </select>
      </label>
      <label
        class="flex min-w-[140px] flex-1 flex-col gap-1 text-xs font-semibold sm:min-w-[160px] sm:text-sm"
      >
        Buscar
        <input
          class="input-field"
          name="q"
          placeholder="2x1, combo, hamburguesa"
        />
      </label>
      <label
        class="flex min-w-[140px] flex-1 flex-col gap-1 text-xs font-semibold sm:min-w-[160px] sm:text-sm"
      >
        Fecha y hora
        <input class="input-field" type="datetime-local" name="at" value={at} />
      </label>
      <button class="button-primary w-full sm:w-auto text-xs sm:text-sm" type="submit"
        >Aplicar filtros</button
      >
    </div>
  </form>
</div>
