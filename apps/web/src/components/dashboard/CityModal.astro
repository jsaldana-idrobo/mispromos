<div
  class="fixed inset-0 z-50 hidden flex items-center justify-center bg-ink-900/40 p-4 backdrop-blur-sm"
  data-city-modal-overlay
  hidden
>
  <div
    class="max-h-[90vh] w-full max-w-2xl overflow-y-auto rounded-3xl border border-ink-900/10 bg-white/95 p-6 shadow-2xl"
    data-city-modal
  >
    <div class="flex items-start justify-between gap-4">
      <div>
        <p class="text-xs uppercase tracking-[0.2em] text-ink-900/50">
          Ciudades
        </p>
        <h3 class="text-2xl font-semibold" data-city-modal-title>
          Crear ciudad
        </h3>
        <p class="mt-1 text-sm text-ink-900/60">
          Agrega una nueva ciudad al catálogo.
        </p>
      </div>
      <button
        class="rounded-full border border-ink-900/20 px-3 py-1 text-xs"
        type="button"
        data-city-modal-close
      >
        Cerrar
      </button>
    </div>
    <form class="mt-6 grid gap-4" data-city-form>
      <label class="grid gap-2 text-sm font-semibold">
        Nombre
        <input class="input-field" name="name" placeholder="Palmira" required />
      </label>
      <label class="grid gap-2 text-sm font-semibold">
        Código país
        <input
          class="input-field"
          name="countryCode"
          placeholder="CO"
          required
          maxlength="2"
        />
      </label>
      <p class="text-sm text-ink-900/60" data-city-message></p>
      <button class="button-primary" type="submit">Guardar ciudad</button>
    </form>
  </div>
</div>
