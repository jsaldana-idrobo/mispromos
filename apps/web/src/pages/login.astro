---
import BaseLayout from "../layouts/BaseLayout.astro";
import authScript from "../scripts/auth.ts?url";
---

<BaseLayout title="Mis promos | Iniciar sesión">
  <section class="grid gap-8 lg:grid-cols-[1fr,1fr]">
    <div class="space-y-4">
      <p class="text-sm uppercase tracking-[0.3em] text-ink-900/60">Cuenta</p>
      <h1 class="text-3xl font-display">Inicia sesión</h1>
      <p class="text-sm text-ink-900/60">
        Administra tus negocios y promociones desde el dashboard.
      </p>
      <div class="rounded-3xl border border-ink-900/10 bg-white/70 p-6 text-sm text-ink-900/70">
        <p>¿Aún no tienes cuenta?</p>
        <a href="/register" class="mt-3 inline-flex rounded-full border border-ink-900/20 px-4 py-2 font-semibold">
          Crear cuenta
        </a>
      </div>
    </div>
    <div class="glass-panel rounded-3xl p-6">
      <form class="grid gap-4" data-auth-form data-mode="login">
        <label class="grid gap-2 text-sm font-semibold">
          Email
          <input class="input-field" type="email" name="email" required />
        </label>
        <label class="grid gap-2 text-sm font-semibold">
          Contraseña
          <input class="input-field" type="password" name="password" minlength="8" required />
        </label>
        <p class="text-sm text-ink-900/60" data-auth-message></p>
        <button class="button-primary" type="submit">Entrar</button>
      </form>
    </div>
  </section>

  <script type="module" src={authScript}></script>
</BaseLayout>
